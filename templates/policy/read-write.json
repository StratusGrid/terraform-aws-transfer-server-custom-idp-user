{
  "Version" : "2012-10-17",
    "Statement" : [
      {
        "Action" : [
          "s3:ListBucket",
          "s3:GetBucketLocation"
        ],
        "Effect" : "Allow",
        "Resource" : [
          "${s3_bucket}"
        ],
        "Sid" : "AllowListingOfUserFolder"
      },
      {
        "Action" : [
          "s3:PutObject",
          "s3:PutObjectAcl",
          "s3:GetObject",
          "s3:DeleteObjectVersion",
          "s3:DeleteObject",
          "s3:GetObjectVersion"
        ],
        "Effect"   : "Allow",
        "Resource" : "${user_home}",
        "Sid"      : "HomeDirObjectAccess"
      }
    ]
  }